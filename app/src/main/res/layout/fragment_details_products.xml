<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImageProduct"
            android:layout_width="0dp"
            android:layout_height="@dimen/_300sdp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpagerProductImages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/close_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:src="@drawable/close_ic"/>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/linearTitlePrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/cardImageProduct"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/h3"
                android:textStyle="bold"
                android:text="LofOdee"/>
            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/h3"
                android:textColor="@color/g_gray700"
                android:text="$ 50,000"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h3"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/linearTitlePrice"
            app:layout_constraintStart_toStartOf="@+id/linearTitlePrice"
            android:textSize="16sp"
            android:text="Orignal"/>
        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/g_line"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_description"
            app:layout_constraintStart_toStartOf="@+id/linearTitlePrice"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/linearTitlePrice"/>
        <LinearLayout
            android:id="@+id/linearColorAndSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/line"
            app:layout_constraintEnd_toEndOf="@+id/line"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/line">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_product_Colors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/h3"
                    android:textColor="@color/black"
                    android:text="Color"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleViewColors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_product_Sizes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/h3"
                    android:textColor="@color/black"
                    android:text="Size"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleViewSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"/>
            </LinearLayout>

        </LinearLayout>

        <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/buttonAddToCard"
            android:layout_width="0dp"
            android:layout_height="@dimen/mediumButtonHeight"
            style="@style/blueButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/linearColorAndSize"
            app:layout_constraintStart_toStartOf="@id/linearColorAndSize"
            app:layout_constraintEnd_toEndOf="@id/linearColorAndSize"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:text="Add Card"
            app:spinning_bar_color="@color/white"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

